    <section class="contenedorArchives Descripcion">
  <div class="user mx-4">
    <div class="row">
      {{#each contactos}}
      <div class="col-md-3 mb-4" style="margin-top: 10px;">
        <div class="card mb-3" data-nombre="{{this.nombre}}"
          style="display: flex; flex-direction: column; align-items: center; padding: 10px; background-image: url('images/back.jpg'); background-size: cover; background-position: center; box-shadow:  0 0 10px rgba(0, 0, 0, 0.2);">
          <div style="margin-bottom: 10px;">
            {{#if this.photo}}
            <img src="{{this.photo}}" class="card-img-top rounded-circle mx-auto"
              style="width: 100px; height: 100px;" alt="Foto de {{this.nombre}}">
            {{else}}
            <img src="images/user.avif" class="card-img-top rounded-circle mx-auto"
              style="width: 100px; height: 100px;" alt="Foto predeterminada">
            {{/if}}
          </div>
          <div class="card-body text-center">
            <!-- Mostrar el nombre del contacto -->
            <h5 class="card-title">{{this.nombre}}</h5>
            <!-- Agregar otros detalles del contacto -->
            <p class="card-text"><strong>Teléfono:</strong><br> {{this.telefono}}</p>
            <p class="card-text"><strong>Correo:</strong><br> {{this.correo}}</p>
          </div>
          <!-- Agregar botones para borrar, ver detalles y mensajes -->
          <div class="card-footer" style="margin-top: auto;">
            <div class="d-flex justify-content-center">
              <a href="/presentar_mascota?id={{this.id}}" class="btn btn-primary btn-sm mx-2">Ver detalles</a>
              <a href="/mensajes/{{this.id}}" class="btn btn-success btn-sm mx-2">Mensajes</a>
              <a href="/borrar/{{this.id}}" class="btn btn-danger btn-sm mx-2">Borrar</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>


    <section class="contenedor" style="text-align: center; font-size: 24px; font-weight: bold; color: gray;">
      <section class="galeria">
        <div class="cardsG">
