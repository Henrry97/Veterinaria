<div class="container d-flex justify-content-center align-items-center " style="height: 100vh;">
  <form id="registrationForm" class="border border-secondary p-5 rounded shadow-lg position-relative background-container" style="width: 500px;" action="/crear_usuario" method="POST">
    <div class="circle-image position-absolute top-0 start-50 translate-middle" style="z-index: 1; width: 100px; height: 100px;">
      <img src="images/img.jpg" alt="Imagen de perfil" width="100%" height="100%" style="object-fit: cover; border-radius: 50%;">
    </div>
    <h2 class="text-center mb-5 custom-font2">Registrarse</h2>
    <div class="mb-4 input-group input-group-lg">
      <span class="input-group-text bg-primary"><i class='bx bx-user text-light'></i></span>
      <input type="email" class="form-control" id="registerEmail" name="correo" placeholder="Correo electrónico" required>
    </div>
    <div class="mb-4 input-group input-group-lg">
      <span class="input-group-text bg-primary"><i class='bx bx-lock-alt text-light'></i></span>
      <input type="password" class="form-control" id="registerPassword" name="clave" placeholder="Contraseña" required>
    </div>
    <button type="submit" class="btn btn-primary btn-lg d-block mx-auto">Registrarse</button>
    <div class="mt-4 text-center" id="final">
      ¿Ya tienes cuenta? <a href="/login">Inicia sesión</a>
    </div>
  </form>
</div>

<script>
document.getElementById('registrationForm').addEventListener('submit', function(event) {
  const password = document.getElementById('registerPassword').value;
  const regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

  // Verifica si la contraseña cumple con los requisitos
  if (!regex.test(password)) {
    event.preventDefault(); // Previene el envío del formulario
    alert('La contraseña debe tener al menos 8 caracteres, incluir mayúsculas, minúsculas, números y símbolos especiales.');
  }
});
</script>
