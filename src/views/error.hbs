{{!-- ErrorPage.hbs --}}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="text-center">
        <i class='bx bx-error icon-text' style="color: #ff4500; font-size: 72px;"></i>
        <h2 class="mt-3" style="color: #007bff;">Error {{errorCode}}</h2> <!-- Código de error dinámico -->
        <h1 class="mt-2">¡Ups! Algo salió mal...</h1>
        <p class="lead">{{errorMessage}}</p> <!-- Mensaje de error dinámico -->
        <a href="javascript:history.back()" class="btn btn-primary">Volver</a>
    </div>
</div>
